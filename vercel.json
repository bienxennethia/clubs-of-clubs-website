{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist/client" }
    },
    {
      "src": "server/**/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "server/$1" },
    { "src": "/(.*)", "dest": "dist/client/$1" }
  ]
}
