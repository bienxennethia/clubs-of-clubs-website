{
  "version": 2,
  "builds": [
    { "src": "/client", "use": "@vercel/static-build", "config": { "buildCommand": "npm install && npm run build", "outputDirectory": "build" }},
    { "src": "/server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/client/build/$1" },
    { "src": "/api/(.*)", "dest": "/server/$1" }
  ]
}
